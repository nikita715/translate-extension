{
  "name": "Translate Extension",
  "version": "1.0",
  "description": "An extension that can translate any word from English to Russian by double-clicking it",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["contentScript.js"],
    "css": ["style.css"]
  }],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "ChromiePop"
  }
}
