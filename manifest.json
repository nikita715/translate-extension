{
  "name": "Translator Extension",
  "version": "1.0",
  "description": "Translate any word by double-click or right-click",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["contentScript.js"],
    "css": ["style.css"]
  }],
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "contextMenus"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Translator"
  }
}
